    position: relative;
    margin-left: 50px;
    margin-top: 90px;
    margin-right: 20px;
}

.comment-avatar {
    width: 70px;
    height: 70px;
    background: #7f8c8c url("/assets/course14/avatar.png") no-repeat 50% 50%;
}

