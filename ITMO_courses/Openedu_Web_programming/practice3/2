                <li class="miss">
                    <div class="hitbox"></div>
                    <div class="lever"><i></i></div>
                </li>
            </ul>
        </div>
        <div class="shooter-2">
            <ul class="target">
                <li>
                    <div class="hitbox"></div>
                    <div class="lever"><i></i></div>
                </li>
                <li>
                    <div class="hitbox"></div>
                    <div class="lever"><i></i></div>
                </li>
                <li>
                    <div class="hitbox"></div>
                    <div class="lever"><i></i></div>
                </li>
                <li>
                    <div class="hitbox"></div>
                    <div class="lever"><i></i></div>
