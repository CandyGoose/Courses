    margin-bottom: 20px;
    padding: 10px;
    color: white;
    background: #3A78A1;
}

.block-relative {
    position:relative;
    bottom:10px;
    padding: 10px;
    color: white;
    background: #3A78A1;
    right: 10px;
    right: -10px;
    margin-bottom: 40px;
}

