    margin:0;
    padding:0;
    font-family:'PT Sans', sans-serif;
}
.wrapper{
    width:450px;
    margin:0 auto;
    box-shadow:0 0 2px #ccc;
}
.header,
.footer{
    padding:10px;
    background:#ecf0f1;
}
.sidebar{
    min-height:150px;
    padding:10px;
    background:rgba(46, 204, 113, 0.8);
    color:white;
    float: left;
    width: 150px;
}
.content{
    min-height:100px;
    padding:10px;
    background:#3498db;
    color:white;
}



